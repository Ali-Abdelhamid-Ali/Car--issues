# ========================================
# Django Settings
# ========================================
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-use-long-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DB_NAME=car_diagnosis_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ========================================
# Redis Configuration (for Celery)
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# AI/ML API Keys
# ========================================

# GROQ API Key (Recommended - FREE and FAST!)
# Get your free key from: https://groq.com/
# The system will use GROQ as the primary LLM provider
GROQ_API_KEY=

# OpenAI API Key (Fallback)
# Only needed if GROQ_API_KEY is not provided
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ========================================
# CORS Configuration
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://127.0.0.1,http://127.0.0.1:80

# ========================================
# Application Settings
# ========================================

# Time Zone (adjust to your location)
TIME_ZONE=Africa/Cairo

# Language
LANGUAGE_CODE=en-us

